<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="spring.jsf" level="INFO" />
    <logger name="spring.security" level="INFO" />
    <logger name="za.org.phyllis.robertson.home" level="INFO" />
    <logger name="org.springframework" level="WARN" />
    <logger name="com.gargoylesoftware.htmlunit" level="ERROR" />
    <logger name="org.apache.tomcat.util.scan" level="ERROR" />
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
